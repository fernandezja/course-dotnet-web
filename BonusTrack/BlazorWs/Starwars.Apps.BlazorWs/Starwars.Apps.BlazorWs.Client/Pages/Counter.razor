@page "/counter"
@page "/contador"
@attribute [RenderModeInteractiveWebAssembly]

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="(IncrementCountAsync)">Click me</button>



<input type="text" @bind-value="nombre"
                    @bind-value:event="oninput" />
<br />
<label>@nombre</label>


@if (visualizar)
{
   
   <h2>Demo Curso .NET </h2>
    

}


@code {
    private int currentCount = 0;
    private bool visualizar = false;
    private string nombre = "";




    private async Task IncrementCountAsync()
    {
        currentCount++;
        visualizar = true;

        await FinDeCursadaAsync();


    }



    protected async Task FinDeCursadaAsync()
    {
        
        nombre = "Cargando...";
        this.StateHasChanged();

        await Task.Delay(2000);

        nombre = "Fin de Cursada NET WEB  - " + DateTime.Now.ToLocalTime();
        this.StateHasChanged();
    }
}
